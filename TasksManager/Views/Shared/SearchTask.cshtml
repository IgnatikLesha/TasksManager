@model IEnumerable<TasksManager.Models.TaskViewModel>
@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var options = new AjaxOptions
    {
        UpdateTargetId = "tableBody",
        Url = Url.Action("SearchTask", "Home"),
        OnSuccess = "processData"
    };
 }
@if (User.Identity.IsAuthenticated)
{
    <h2> My Tasks</h2>
    <input type="button" onclick="processData(model)"/>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>
                    <p class="text-info">
                        Name
                        @*@Html.DisplayNameFor(model => model.Name)*@
                    </p>
                </th>
                <th>
                    <p class="text-info">
                        Description
                        @*@Html.DisplayNameFor(model => model.Description)*@
                    </p>
                </th>
                <th>
                    <p class="text-info">
                        Checked
                        @*@Html.DisplayNameFor(model => model.Checked)*@
                    </p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @foreach (var item in ViewBag.jsonTasks)
            {
                
            }
        <table/>
    </table>
}

<script type="text/javascript">
    function processData(data) {
        var target = $("#tableBody");
        target.empty();
        for (var i = 0; i < data.length; i++) {
            var task = data[i];
            target.append("<tr><td>" + task.Name + "</td><td>"
                + task.Description + "</td><td>" + task.Checked
                + "</td></tr>");
        }
    }
</script>